@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="text-danger">An Error Occurred</h1>
    <h3>Status Code: @ViewBag.StatusCode</h3>
    <p class="text-muted">@ViewBag.ErrorMessage</p>

    @if (!string.IsNullOrEmpty(ViewBag.PreviousUrl))
    {
        <a href="@ViewBag.PreviousUrl" class="btn btn-primary mt-3">Go Back</a>
    }
    else
    {
        <a href="/" class="btn btn-secondary mt-3">Home</a>
    }
</div>
