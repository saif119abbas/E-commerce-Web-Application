@model List<E_Commerce.Models.OrderItem>

@{
    var orderId = ViewBag.OrderId;
    var userId = ViewBag.UserId;
    ViewData["Title"] = $"Details Of Order :{orderId}";
}

<div class="container mt-4">
    <h1 class="mb-4">Your Orders</h1>
  <div class="table-responsive">
            <form asp-controller="Customer" asp-action="Index" method="get">
                <p>
                    <label>Search: <input type="text" name="searchQuery" placeholder="Enter the product name" /></label>
                    <input type="submit" value="Filter" />
                </p>
            </form>
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model[0].ProductName)</th>
                        <th>@Html.DisplayNameFor(model => model[0].Price)</th>
                        <th>@Html.DisplayNameFor(model => model[0].Quantity)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    
</div>

<div>
    <a asp-action="Orders" asp-controller="Customer">Back to Orders</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
