@model E_Commerce.Models.ProductModel

@{
    ViewData["Title"] = "Delete Product";

    var productId = ViewBag.ProductId;
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>
    </dl>

    <form asp-action="DeleteProduct" asp-controller="Vendor" asp-route-productId="@productId"  method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Vendor" >Back to List</a>
    </form>
</div>
