@model List<E_Commerce.Models.ProductDTO>

@{
    ViewData["Title"] = "Product List";
  
}

<div class="container mt-4">
    <h1 class="mb-4">Your Products</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            You haven't added any products yet.
        </div>
        <a asp-action="AddProduct"   class="btn btn-primary">Add New Product</a>
    }
    else
    {
        <div class="mb-3">
            <a asp-action="AddProduct" class="btn btn-primary">Add New Product</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model[0].Price)</th>
                        <th>@Html.DisplayNameFor(model => model[0].CategoryName)</th>
                        <th>@Html.DisplayNameFor(model => model[0].Quantity)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => product.Name)</td>
                            <td>@Html.DisplayFor(modelItem => product.Price)</td>
                            <td>@Html.DisplayFor(modelItem => product.CategoryName)</td>
                            <td>@Html.DisplayFor(modelItem => product.Quantity)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="EditProduct" asp-route-productId="@product.Id" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info">Details</a>
                                    <a asp-action="DeleteProduct" asp-route-productId="@product.Id"  class="btn btn-sm btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

